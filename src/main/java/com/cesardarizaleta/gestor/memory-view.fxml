<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.bootstrapfx.BootstrapFX?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cesardarizaleta.gestor.MemoryController">
    <top>
        <ToolBar styleClass="tool-bar">
            <Label text="Memory Manager" styleClass="h1 text-primary"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="10" styleClass="bg-light p-4">
            <!-- VisualizaciÃ³n de memoria -->
            <Label text="Memory Visualization" styleClass="h3"/>
            <HBox id="memoryContainer" spacing="2" styleClass="memory-container"/>

            <!-- Formulario para agregar procesos -->
            <GridPane hgap="10" vgap="10">
                <Label text="Process Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="text-bold"/>
                <TextField fx:id="processName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Memory Size (MB):" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="text-bold"/>
                <TextField fx:id="processSize" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Button text="Add Process" GridPane.columnIndex="0" GridPane.rowIndex="2"
                        styleClass="btn btn-primary" onAction="#addProcess"/>
                <Button text="Remove Process" GridPane.columnIndex="1" GridPane.rowIndex="2"
                        styleClass="btn btn-danger" onAction="#removeProcess"/>
            </GridPane>
        </VBox>
    </center>

    <bottom>
        <StatusBar styleClass="status-bar">
            <Label fx:id="statusLabel" text="Ready" styleClass="text-success"/>
        </StatusBar>
    </bottom>

    <stylesheets>
        <BootstrapFX/>
        <URL value="@style.css"/>
    </stylesheets>
</BorderPane>